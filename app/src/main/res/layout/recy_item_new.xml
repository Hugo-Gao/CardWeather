<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardBackgroundColor="@color/colorCloudy"
                                    android:id="@+id/future_card"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#FAFAFA"
        android:id="@+id/future_date_txt"
        android:text="****-**-**"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="**℃~**℃"
        android:id="@+id/future_temp_txt"
        android:layout_below="@id/future_date_txt"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textColor="#FAFAFA"
        android:textSize="30sp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/sunny_logo"
            android:id="@+id/future_pic"
            android:layout_marginStart="270dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/future_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/future_pic"
            android:layout_marginStart="270dp"
            android:textColor="#D1D4D8"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="星期*"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/place1"
            android:layout_marginStart="180dp"
            android:layout_marginTop="30dp"
            android:id="@+id/decor_pic"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>